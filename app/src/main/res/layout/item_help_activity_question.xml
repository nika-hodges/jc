<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/usercenter_help_question_item_title_layout"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:background="@color/black_transparent_50" >

        <TextView
            android:id="@+id/usercenter_help_question_item_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:textColor="@color/black"
            android:textSize="14sp" />

        <ImageView
            android:id="@+id/usercenter_help_question_item_expand_img"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/usercenter_question_item_packet" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/usercenter_help_question_item_content_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone" >

        <TextView
            android:id="@+id/usercenter_help_question_item_content"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="#f2f2f2"
            android:padding="12dp"
            android:textColor="#666666" />

    </LinearLayout>

    <View
        android:id="@+id/usercenter_help_question_item_divider"
        android:layout_width="fill_parent"
        android:layout_height="1px"
        android:background="@color/line_1" />

</LinearLayout>